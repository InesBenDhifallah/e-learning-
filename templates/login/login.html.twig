{% block title %}{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ block('title') }}</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url("{{ asset('img/elearning.png') }}");
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        /* Menu en haut de la page */
        .top-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            position: fixed;
            top: 0;
            left: 0;
            z-index: 2;
            width: 100%;
        }

        .logo img {
            height: 50px;
            width: auto;
        }

        .menu a {
            margin: 0 15px;
            text-decoration: none;
            color: black;
            font-size: 18px;
        }

        .menu a:hover {
            background-color: #575757;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
        }

        /* Contenu de la page de connexion */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .login-container {
            position: relative;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 400px;
            width: 100%;
            z-index: 2;
        }

        .login-container h1 {
            margin-bottom: 20px;
            color: #333;
            font-size: 24px;
        }

        .input-group {
            display: flex;
            align-items: center;
            background: #f1f1f1;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        .input-group i {
            margin-right: 10px;
            color: #666;
        }

        .input-group input {
            border: none;
            outline: none;
            background: transparent;
            width: 100%;
            font-size: 16px;
        }

        .login-btn {
            background: #4bc0c0;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
        }

        .login-btn:hover {
            background: #36a2eb;
        }

        .extra-links {
            margin-top: 15px;
        }

        .extra-links a {
            color: #36a2eb;
            text-decoration: none;
            font-size: 14px;
        }

        .extra-links a:hover {
            text-decoration: underline;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <!-- Menu en haut -->
    <div class="top-nav">
        <div class="logo">
             <img src="{{ asset('img/logo.png') }}" alt="Logo">
        </div>
        <div class="menu">
            <a href="#">Register</a>
            <a href="#">Join our team</a>
            <a href="#"></a>
        </div>
    </div>

    <div class="overlay"></div>

    <div class="login-container">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are already logged in as {{ app.user.nom }}, <a hre f="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <form method="post">
            <div class="input-group">
                <i class="fas fa-envelope"></i>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
            </div>
            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input type="password" name="_password" id="password" class="form-control" placeholder="Password" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# Uncomment for "Remember Me" functionality #}
            {#
            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
            #}

            <button class="login-btn" type="submit">Sign in</button>
        </form>

        <div class="extra-links">
            <a href="#">Forgot password?</a>
        </div>
    </div>

</body>
</html>
{% endblock %}