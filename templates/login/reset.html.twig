{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Envoyer un email</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url("{{ asset('img/elearning.png') }}");
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: background-color 0.3s ease;
        }

        /* Menu en haut de la page */
        .top-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            position: fixed;
            top: 0;
            left: 0;
            z-index: 2;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .logo img {
            height: 50px;
            width: auto;
        }

        .menu a {
            margin: 0 15px;
            text-decoration: none;
            color: #333;
            font-size: 18px;
        }

        .menu a:hover {
            background-color: #4bc0c0;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        /* Contenu de la page */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .email-container {
            position: relative;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 400px;
            width: 100%;
            z-index: 2;
            animation: fadeIn 0.5s ease-out;
        }

        .email-container h1 {
            margin-bottom: 20px;
            color: #333;
            font-size: 26px;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .input-group {
            display: flex;
            align-items: center;
            background: #f1f1f1;
            padding: 12px;
            border-radius: 5px;
            margin-bottom: 15px;
            transition: background-color 0.3s ease;
        }

        .input-group i {
            margin-right: 10px;
            color: #666;
        }

        .input-group input {
            border: none;
            outline: none;
            background: transparent;
            width: 100%;
            font-size: 16px;
        }

        .submit-btn {
            background: #36a2eb;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background: #4bc0c0;
        }

        /* Notification styles */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #4bc0c0;
            color: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            display: none; /* Hidden by default */
            animation: slideIn 0.5s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body>

    <!-- Menu en haut -->
    <div class="top-nav">
        <div class="logo">
            <img src="{{ asset('img/logo.png') }}" alt="Logo">
        </div>
        <div class="menu">
            <a href="{{ path('app_parentsignup') }}">S'inscrire</a>
            <a href="{{ path('app_register') }}">Rejoindre notre équipe</a>
            <a href="{{ path('app_register') }}"></a>
        </div>
    </div>

    <div class="overlay"></div>

    <div class="email-container">
        <h1>Entrez votre email</h1>

        <form method="post" action="{{ path('app_send') }}" id="emailForm">
            <div class="input-group">
                <i class="fas fa-envelope"></i>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    placeholder="Entrez votre email" 
                    required
                >
            </div>
            <button type="submit" class="submit-btn">Envoyer</button>
        </form>
    </div>

    <!-- Notification -->
    <div id="notification" class="notification">
        Email envoyé avec succès !
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('emailForm');
            const notification = document.getElementById('notification');

            form.addEventListener('submit', function (event) {
                event.preventDefault(); // Prevent the form from submitting immediately

                // Simulate form submission (replace with actual form submission logic if needed)
                setTimeout(() => {
                    // Show the notification
                    notification.style.display = 'block';

                    // Hide the notification after 3 seconds
                    setTimeout(() => {
                        notification.style.display = 'none';
                    }, 3000);

                    // Optionally, submit the form after showing the notification
                    form.submit();
                }, 500); // Simulate a delay for demonstration
            });
        });
    </script>
</body>
</html>
{% endblock %}