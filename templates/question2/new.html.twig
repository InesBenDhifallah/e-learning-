{% extends 'question2/layout.html.twig' %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <!-- Header Section -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">Créer une nouvelle Question</h1>
                    <p class="text-gray-600 mt-2">Ajoutez une nouvelle question au quiz</p>
                </div>
                <a href="{{ path('app_question2_index', {'quizz_id': quizz_id}) }}" 
                   class="flex items-center gap-2 bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition">
                    <i class="fas fa-arrow-left"></i>
                    Retour à la liste
                </a>
            </div>

            <!-- Form Card -->
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                <!-- Card Header -->
                <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-semibold text-gray-700">
                        <i class="fas fa-question-circle mr-2 text-blue-500"></i>
                        Détails de la question
                    </h2>
                </div>

                <!-- Form Content -->
                <div class="p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div class="space-y-4">
                            <div class="form-group">
                                {{ form_label(form.question, 'Question', {
                                    'label_attr': {
                                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                                    }
                                }) }}
                                <div class="relative">
                                    {{ form_widget(form.question, {
                                        'attr': {
                                            'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-shadow',
                                            'placeholder': 'Entrez votre question...'
                                        }
                                    }) }}
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                        <i class="fas fa-pencil-alt text-gray-400"></i>
                                    </div>
                                </div>
                                {{ form_errors(form.question, {
                                    'attr': {
                                        'class': 'text-red-500 text-sm mt-1'
                                    }
                                }) }}
                                <p class="mt-2 text-sm text-gray-500">
                                    Soyez clair et concis dans la formulation de votre question.
                                </p>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-200">
                            <button type="button" onclick="history.back()" 
                                    class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition">
                                <i class="fas fa-times mr-2"></i>Annuler
                            </button>
                            <button type="submit" 
                                    class="flex items-center px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
                                <i class="fas fa-save mr-2"></i>
                                Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Flash Messages -->
            {% if app.session.flashBag.has('success') %}
                <div class="mt-6 p-4 bg-green-100 border border-green-200 text-green-700 rounded-lg flex items-center">
                    <i class="fas fa-check-circle mr-3 text-green-500"></i>
                    {% for message in app.flashes('success') %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
