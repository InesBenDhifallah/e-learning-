<form method="post" action="{{ path('app_question2_delete', {'id': question.id, 'quizz_id': quizz_id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette question ?');" 
      class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
    <button type="submit" class="{{ button_class|default('bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition flex items-center gap-2') }}">
        <i class="fas fa-trash-alt"></i>
        <span>Supprimer</span>
    </button>
</form>
