{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    <!-- Page Container -->
    <div class="container mx-auto px-4 py-8">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm">
            <ol class="list-none p-0 inline-flex items-center text-gray-500">
                <li class="flex items-center">
                    <a href="{{ path('app_quizz2_index') }}" class="hover:text-lime-600">Quiz</a>
                    <svg class="w-3 h-3 mx-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                </li>
                <li class="flex items-center">
                    <a href="{{ path('app_quizz2_show', {'id': quizz_id}) }}" class="hover:text-lime-600">Quiz #{{ quizz_id }}</a>
                    <svg class="w-3 h-3 mx-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                </li>
                <li>
                    <span class="text-gray-700 font-medium">{% block page_title %}Questions{% endblock %}</span>
                </li>
            </ol>
        </nav>

        {% block content %}{% endblock %}
    </div>
</div>
{% endblock %}
