{% extends 'base.html.twig' %}

{% block title %}Ajouter un Commentaire - Alpha Education{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">
        Ajouter un commentaire à <span class="text-lime-600">"{{ article.title }}"</span>
    </h1>

    <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-md p-6 space-y-6">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            {{ form_label(form.content, null, {'label_attr': {'class': 'block text-lg font-semibold text-gray-700'}}) }}
            <div class="relative">
                {{ form_widget(form.content, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
                {% if form.content.vars.errors|length > 0 %}
                    <div class="absolute text-red-500 text-sm mt-1">
                        {% for error in form.content.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Button Group -->
        <div class="flex justify-between space-x-4 mt-6">
            <button type="submit" 
                    class="bg-blue-500 text-white px-6 py-3 rounded-full font-bold shadow-md hover:bg-blue-600 transition duration-300 transform hover:scale-105 w-full sm:w-auto">
                ➕ Ajouter le commentaire
            </button>

            <button onclick="history.back()" 
                    class="bg-gray-500 text-white px-6 py-3 rounded-full font-bold shadow-md hover:bg-gray-600 transition duration-300 transform hover:scale-105 w-full sm:w-auto">
                ⬅ Retour
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
