{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire - Alpha Education{% endblock %}

{% block body %}
    <h1 class="text-3xl font-extrabold text-gray-800 mb-6 text-center">
        Modifier le commentaire
    </h1>

    <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg p-8 space-y-8">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div class="space-y-4">
            {{ form_label(form.content, null, {'label_attr': {'class': 'block text-lg font-semibold text-gray-700'}}) }}
            <div class="relative">
                {{ form_widget(form.content, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500 transition duration-300 ease-in-out'}}) }}
                {% if form.content.vars.errors|length > 0 %}
                    <div class="absolute text-red-500 text-sm mt-1">
                        {% for error in form.content.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Button Group with Improved Spacing and Styling -->
        <div class="flex flex-col sm:flex-row justify-between space-y-4 sm:space-y-0 sm:space-x-4 mt-6">
            <button type="submit" 
                    class="bg-lime-500 text-white px-6 py-3 rounded-full font-semibold shadow-lg hover:bg-lime-600 transition duration-300 transform hover:scale-105 w-full sm:w-auto">
                Enregistrer les modifications
            </button>

            <button onclick="history.back()" 
                    class="bg-gray-500 text-white px-6 py-3 rounded-full font-semibold shadow-lg hover:bg-gray-600 transition duration-300 transform hover:scale-105 w-full sm:w-auto">
                â¬… Retour
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
