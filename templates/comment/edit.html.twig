{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-6">
            <h1 class="text-2xl font-bold mb-6">Modifier le commentaire</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                {{ form_row(form.content, {
                    'label': 'Votre commentaire',
                    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'},
                    'attr': {
                        'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-lime-500 focus:border-lime-500',
                        'rows': 4
                    }
                }) }}

                <div class="flex justify-between items-center pt-4">
                    <a href="{{ path('article_show', {'id': comment.article.id}) }}" 
                       class="text-gray-600 hover:text-gray-800">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Retour Ã  l'article
                    </a>
                    <button type="submit" 
                            class="bg-lime-500 text-white px-6 py-2 rounded-lg hover:bg-lime-600 transition-colors">
                        Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
