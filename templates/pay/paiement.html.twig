{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
 <div class="flex justify-center items-center min-h-screen">
        <div class="bg-white w-full max-w-md mx-auto rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-center mb-6">Détails de Paiement</h2>

            <form action="#" method="POST" class="space-y-4">
                <!-- Informations de facturation -->
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-600">Nom complet</label>
                    <input type="text" id="name" name="name" class="mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500" required>
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-600">Adresse e-mail</label>
                    <input type="email" id="email" name="email" class="mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500" required>
                </div>

               

                <!-- Carte de paiement -->
                <div>
                    <label for="card_type" class="block text-sm font-medium text-gray-600">Type de carte</label>
                    <select id="card_type" name="card_type" class="mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500" required>
                        <option value="">-- Sélectionnez le type de carte --</option>
                        <option value="visa">Visa</option>
                        <option value="mastercard">MasterCard</option>
                    </select>
                </div>

                <div>
                    <label for="card_number" class="block text-sm font-medium text-gray-600">Numéro de carte</label>
                    <input type="text" id="card_number" name="card_number" class="mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500" placeholder="1234 5678 9012 3456" required>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="expiry_date" class="block text-sm font-medium text-gray-600">Date d'expiration</label>
                        <input type="month" id="expiry_date" name="expiry_date" class="mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500" required>
                    </div>
                    <div>
                        <label for="cvv" class="block text-sm font-medium text-gray-600">CVV</label>
                        <input type="text" id="cvv" name="cvv" class="mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500" placeholder="123" required>
                    </div>
                </div>

                <!-- Récapitulatif de paiement -->
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-700">Total à payer :</span>
                    <span class="text-xl font-bold text-gray-900">{{prix}}</span>
                </div>

                <!-- Bouton de soumission -->
                <button type="submit" class="w-full py-3 bg-lime-500 text-white font-medium rounded-lg hover:bg-lime-600 transition duration-300">Procéder au paiement</button>
            </form>
        </div>
    </div>
</body>
</html>

{% endblock %}
