{% block title %}Inscription{% endblock %}

{% block css %}
<style>
    body {
        font-family: Arial, sans-serif;
        background-image: url("{{ asset('img/elearning.png') }}");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        overflow-y: auto;
    }

    .top-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        width: 100%;
        background: white;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 2;
    }

    .menu a {
        margin: 0 10px;
        text-decoration: none;
        color: black;
        font-weight: bold;
    }

    .menu a:hover {
        color: #4bc0c0;
    }

    .logo img {
        height: 50px;
        width: auto;
    }

    .hero {
        text-align: center;
        padding: 100px 20px;
        margin-top: 80px;
        color: white;
    }

    .container {
        background: white;
        width: 80%;
        max-width: 600px;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        text-align: center;
        margin: 30px auto;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        font-weight: bold;
        display: block;
    }

    input, textarea, select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .error {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

    button {
        background-color: #4bc0c0;
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

    button:hover {
        background-color: #36a2eb;
    }
</style>
{% endblock %}

{% block body %}
<div class="top-nav">
    <div class="logo">
        <img src="{{ asset('img/logo.png') }}" alt="Alpha Education Logo">
    </div>
    <div class="menu">
        <a href="{{ path('app_pageacceuil') }}">Accueil</a>
        <a href="{{ path('app_parentsignup') }}">S'inscrire</a>
        <a href="{{ path('app_login') }}">Connexion</a>
        <a href="{{ path('app_login') }}"></a>
    </div>
</div>

<div class="hero">
    <h1>Rejoignez Alpha Education</h1>
    <p>Devenez un enseignant passionné et aidez à façonner l'avenir des enfants !</p>
</div>

<div class="container">
    <h2>Inscription</h2>

    {# Display Symfony validation errors from flash messages #}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="form-group">
        {{ form_label(registrationForm.email, 'Email') }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.email) }} 
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.nom, 'Nom') }}
        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.nom) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.phonenumber, 'Numéro de téléphone') }}
        {{ form_widget(registrationForm.phonenumber, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.phonenumber) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.matiere, 'Matière enseignée') }}
        {{ form_widget(registrationForm.matiere, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.matiere) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.experience, 'Années d\'expérience') }}
        {{ form_widget(registrationForm.experience, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.experience) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.reason, 'Pourquoi voulez-vous nous rejoindre ?') }}
        {{ form_widget(registrationForm.reason, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.reason) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions générales') }}
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_errors(registrationForm.agreeTerms) }}
    </div>

    <button type="submit">S'inscrire</button>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
