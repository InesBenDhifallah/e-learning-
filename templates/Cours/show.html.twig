{% extends 'sidebarprof.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold mb-6">Détails du Cours</h1>
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-bold mb-2">{{ cour.nom }}</h3>
        <p class="text-gray-600 mb-4">Matière : {{ cour.matiere }}</p>
        <p class="text-gray-600 mb-4">Thème : {{ cour.theme }}</p>
        <div class="flex justify-end">
            <a href="{{ path('app_cours_index') }}" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}