{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    {% if app.user %}
        <div class="bg-blue-100 text-blue-900 p-4 rounded-lg mb-6 text-center">
            <h2 class="text-xl font-semibold">Bienvenue, {{ app.user.nom }} ! ðŸ˜Š</h2>
        </div>
    {% endif %}

    {% for moduleData in modulesWithChapitresAndCours %}
        <div class="bg-white shadow-md rounded-lg p-6 mb-4">
            <div class="flex justify-between items-center">
                <!-- Module Title with Toggle (Triangle) -->
                <div class="flex items-center cursor-pointer" onclick="toggleVisibility('module-{{ moduleData.module.id }}')">
                    <i class="fas fa-caret-down text-lg text-blue-600 mr-2 transition-transform duration-300" id="icon-module-{{ moduleData.module.id }}"></i>
                    <span class="text-xl font-semibold text-blue-600">{{ moduleData.module.nom }}</span>
                </div>
            </div>

            <!-- Liste des chapitres -->
            <div id="module-{{ moduleData.module.id }}" class="hidden ml-6 mt-3">
                {% for chapitre in moduleData.chapitres %}
                    <div class="mb-2">
                        <div class="flex justify-between items-center">
                            <!-- Chapitre Title with Toggle (Triangle) -->
                            <div class="flex items-center cursor-pointer" onclick="toggleVisibility('chapitre-{{ chapitre.id }}')">
                                <i class="fas fa-caret-right text-lg text-gray-700 mr-2 transition-transform duration-300" id="icon-chapitre-{{ chapitre.id }}"></i>
                                <span class="text-lg font-semibold text-gray-700 hover:text-gray-900">{{ chapitre.nom }}</span>
                            </div>
                        </div>

                        <!-- Liste des cours -->
                        <div id="chapitre-{{ chapitre.id }}" class="hidden ml-6 mt-2">
                            {% for cours in moduleData.cours[chapitre.id] %}
                                <div class="bg-gray-100 p-3 rounded-lg mb-2 flex justify-between">
                                    <div>
                                        <h5 class="text-md font-medium text-gray-800">{{ cours.titre }}</h5>
                                        <p class="text-sm text-gray-600">{{ cours.description }}</p>
                                        <a href="/uploads/cours/{{ cours.contenuFichier }}" class="text-blue-500 hover:text-blue-700 underline transition duration-300" target="_blank">
                                            <i class="fas fa-download mr-2"></i> TÃ©lÃ©charger
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>

<!-- JavaScript pour afficher/masquer les chapitres et cours -->
<script>
    function toggleVisibility(id) {
        const element = document.getElementById(id);
        const icon = document.getElementById('icon-' + id);

        if (element.classList.contains('hidden')) {
            element.classList.remove('hidden');
            icon.classList.add('rotate-90');
        } else {
            element.classList.add('hidden');
            icon.classList.remove('rotate-90');
        }
    }
</script>
{% endblock %}
