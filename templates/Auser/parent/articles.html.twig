{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8">Articles Ã‰ducatifs</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for article in articles %}
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="p-6">
                        <h2 class="text-xl font-bold mb-2">{{ article.title }}</h2>
                        <p class="text-gray-600 mb-4">{{ article.content|slice(0, 150) }}...</p>
                        <div class="flex justify-between items-center text-sm text-gray-500">
                            <span>Par {{ article.author }}</span>
                            <span>{{ article.createdAt|date('d/m/Y') }}</span>
                        </div>
                        <div class="mt-4">
                            <a href="{{ path('user_article_show', {'id': article.id}) }}" 
                               class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                                Lire l'article
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-500 text-center col-span-3">Aucun article disponible.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %} 