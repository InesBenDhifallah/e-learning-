<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter des Questions</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex bg-gray-100">
    <aside class="w-64 bg-lime-500 text-white p-5 min-h-screen">
        <div class="text-lg font-bold mb-5">Alpha Education</div>
        <ul class="space-y-4">
            <li><a href="#" class="block hover:text-gray-200">üë§ Profil</a></li>
            <li><a href="#" class="block hover:text-gray-200">üìö Cours</a></li>
            <li><a href="#" class="block hover:text-gray-200">üìä Chapitres</a></li>
            <li><a href="{{ path('quizz_index') }}" class="block hover:text-gray-200">üìù Quiz</a></li>
            <li><a href="#" class="block hover:text-gray-200">üîí D√©connexion</a></li>
        </ul>
    </aside>

    <main class="flex-1 p-6">
        <h1 class="text-2xl font-bold">Ajouter des questions pour le quiz : {{ quiz.matiere }}</h1>

        <form id="questionsForm" action="{{ path('question_add', {'id': quiz.id}) }}" method="POST" onsubmit="return validateForm(event)">
            <div id="questions-container">
                <!-- Premier champ de question par d√©faut -->
                <div class="question-block mb-6 p-4 border rounded-lg bg-white">
                    <label class="block font-bold">Question</label>
                    <input type="text" name="questions[0][question]" class="w-full p-2 border border-gray-300 rounded-lg" required>
                    <p class="text-red-500 text-sm hidden question-error">La question ne peut pas √™tre vide.</p>

                    <fieldset class="mb-4 border p-4 rounded-lg">
                        <legend class="font-bold">Suggestions</legend>
                        <div class="suggestions-container">
                            <div class="flex space-x-2 mb-2">
                                <input type="text" name="questions[0][suggestions][]" class="w-full p-2 border border-gray-300 rounded-lg" required>
                                <input type="radio" name="questions[0][correct_index]" value="0" required>
                            </div>
                        </div>
                        <p class="text-red-500 text-sm hidden suggestion-error">Ajoutez au moins deux suggestions.</p>
                        <p class="text-red-500 text-sm hidden solution-error">S√©lectionnez une seule r√©ponse correcte.</p>
                        <button type="button" onclick="addSuggestion(this)" class="bg-green-500 text-white px-3 py-1 rounded">
                            ‚ûï Ajouter une suggestion
                        </button>
                    </fieldset>
                </div>
            </div>

            <button type="button" onclick="addQuestion()" class="mb-4 bg-blue-500 text-white px-4 py-2 rounded-lg">
                ‚ûï Ajouter une autre question
            </button>

            <div class="mb-4">
                <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-lg">Enregistrer toutes les questions</button>
            </div>
        </form>

        <a href="{{ path('quizz_show', {'id': quiz.id}) }}" class="mt-8 inline-block bg-gray-500 text-white px-4 py-2 rounded-lg">Retour au quiz</a>
    </main>

    <script>
        let questionIndex = 1;

        function addQuestion() {
            let container = document.getElementById('questions-container');

            let questionBlock = document.createElement('div');
            questionBlock.classList.add('question-block', 'mb-6', 'p-4', 'border', 'rounded-lg', 'bg-white');
            questionBlock.innerHTML = `
                <label class="block font-bold">Question</label>
                <input type="text" name="questions[${questionIndex}][question]" class="w-full p-2 border border-gray-300 rounded-lg" required>
                <p class="text-red-500 text-sm hidden question-error">La question ne peut pas √™tre vide.</p>

                <fieldset class="mb-4 border p-4 rounded-lg">
                    <legend class="font-bold">Suggestions</legend>
                    <div class="suggestions-container">
                        <div class="flex space-x-2 mb-2">
                            <input type="text" name="questions[${questionIndex}][suggestions][]" class="w-full p-2 border border-gray-300 rounded-lg" required>
                            <input type="radio" name="questions[${questionIndex}][correct_index]" value="0" required>
                        </div>
                    </div>
                    <p class="text-red-500 text-sm hidden suggestion-error">Ajoutez au moins deux suggestions.</p>
                    <p class="text-red-500 text-sm hidden solution-error">S√©lectionnez une seule r√©ponse correcte.</p>
                    <button type="button" onclick="addSuggestion(this)" class="bg-green-500 text-white px-3 py-1 rounded">
                        ‚ûï Ajouter une suggestion
                    </button>
                </fieldset>
            `;
            container.appendChild(questionBlock);
            questionIndex++;
        }

        function addSuggestion(button) {
            let questionBlock = button.closest('.question-block');
            let suggestionsContainer = questionBlock.querySelector('.suggestions-container');
            let questionIndex = [...document.querySelectorAll('.question-block')].indexOf(questionBlock);
            let suggestionIndex = suggestionsContainer.querySelectorAll('.flex').length;
            
            let div = document.createElement('div');
            div.classList.add('flex', 'space-x-2', 'mb-2');
            div.innerHTML = `
                <input type="text" name="questions[${questionIndex}][suggestions][]" class="w-full p-2 border border-gray-300 rounded-lg" required>
                <input type="radio" name="questions[${questionIndex}][correct_index]" value="${suggestionIndex}" required>
            `;
            suggestionsContainer.appendChild(div);
        }
    </script>
</body>
</html>
