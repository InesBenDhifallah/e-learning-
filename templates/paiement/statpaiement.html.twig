<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistiques Paiements par Abonnement</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <canvas id="paiementAbonnementChart"></canvas>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const stats = {{ stats|json_encode()|raw }};
            
            const labels = stats.map(item => item.abonnement);
            const values = stats.map(item => item.total);

            const ctx = document.getElementById("paiementAbonnementChart").getContext("2d");
            new Chart(ctx, {
                type: "pie",
                data: {
                    labels: labels,
                    datasets: [{
                        label: "Total des Paiements par Abonnement (dinars)",
                        data: values,
                        backgroundColor: [
                            "rgba(255, 99, 132, 0.5)",
                            "rgba(54, 162, 235, 0.5)",
                            "rgba(255, 206, 86, 0.5)",
                            "rgba(75, 192, 192, 0.5)",
                            "rgba(153, 102, 255, 0.5)",
                            "rgba(255, 159, 64, 0.5)"
                        ]
                    }]
                },
                options: {
                    responsive: true
                }
            });
        });
    </script>

</body>
</html>
