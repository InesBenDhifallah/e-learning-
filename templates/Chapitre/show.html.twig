{% extends 'base.html.twig' %}

{% block title %}Détails du Chapitre{% endblock %}

{% block body %}


    <!-- Contenu principal -->
    <div class="flex-grow p-8 flex justify-center items-center">
        <div class="bg-white w-full max-w-md mx-auto rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Détails du Chapitre</h2>

            <div class="bg-gray-100 p-4 rounded-lg">
                <div class="mb-4">
                    <span class="text-gray-600 font-medium">ID :</span>
                    <span class="text-gray-900 font-bold">{{ chapitre.id }}</span>
                </div>

                <div class="mb-4">
                    <span class="text-gray-600 font-medium">Nom :</span>
                    <span class="text-gray-900 font-bold">{{ chapitre.nom }}</span>
                </div>
            </div>

            <div class="flex justify-between mt-6">
                <a href="{{ path('app_chapitre_index') }}" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>

                
            </div>

            <div class="mt-4">
                {{ include('chapitre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
