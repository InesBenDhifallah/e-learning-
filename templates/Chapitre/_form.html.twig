<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter un Chapitre</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="flex min-h-screen">
    
        <div class="w-64 bg-white shadow-lg">
            {% include 'sidebarprof.html.twig' %}
        </div>

        {% block body %}
        <div class="flex-grow p-8 flex justify-center items-center">
            <div class="bg-white w-full max-w-md mx-auto rounded-xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-center mb-6">Ajouter un Chapitre</h2>

                <!-- Formulaire -->
                {{ form_start(form, {'attr': {'class': 'space-y-4', 'novalidate': 'novalidate'}}) }}

                <div>
                    <label for="{{ form.nom.vars.id }}" class="block text-sm font-medium text-gray-600">Nom du Chapitre</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
                    <div class="text-red-500">{{ form_errors(form.nom) }}</div>
                </div>

                <div>
                    <label for="{{ form.description.vars.id }}" class="block text-sm font-medium text-gray-600">Description</label>
                    {{ form_widget(form.description, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
                    <div class="text-red-500">{{ form_errors(form.description) }}</div>
                </div>

                <div>
                    <label for="{{ form.module.vars.id }}" class="block text-sm font-medium text-gray-600">Module</label>
                    {{ form_widget(form.module, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
                    <div class="text-red-500">{{ form_errors(form.module) }}</div>
                </div>

                <button type="submit" class="w-full py-3 bg-lime-500 text-white font-medium rounded-lg hover:bg-lime-600 transition duration-300">
                    Enregistrer
                </button>

                {{ form_end(form) }}

                <div class="text-center mt-6">
                    <a href="{{ path('app_cours_index') }}" class="inline-block px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">
                        Retour Ã  la liste
                    </a>
                </div>
            </div>
        </div>
        {% endblock %}
    </div>
</body>
</html>
