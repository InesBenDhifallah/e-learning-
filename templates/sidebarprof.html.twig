    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
    <script>
        // Gestion des interfaces
        const dashboardBtn = document.getElementById('dashboardBtn');
        const coursBtn = document.getElementById('coursBtn');
        const etudiantsBtn = document.getElementById('etudiantsBtn');
        const statistiquesBtn = document.getElementById('statistiquesBtn');

        const dashboardInterface = document.getElementById('dashboardInterface');
        const coursInterface = document.getElementById('coursInterface');
        const chapitresInterface = document.getElementById('chapitresInterface');
        const etudiantsInterface = document.getElementById('etudiantsInterface');
        const statistiquesInterface = document.getElementById('statistiquesInterface');

        // Afficher l'interface Tableau de Bord
        dashboardBtn.addEventListener('click', () => {
            dashboardInterface.classList.remove('hidden');
            coursInterface.classList.add('hidden');
            chapitresInterface.classList.add('hidden');
            etudiantsInterface.classList.add('hidden');
            statistiquesInterface.classList.add('hidden');
        });

        // Afficher l'interface Mes Cours
        coursBtn.addEventListener('click', () => {
            coursInterface.classList.remove('hidden');
            dashboardInterface.classList.add('hidden');
            chapitresInterface.classList.add('hidden');
            etudiantsInterface.classList.add('hidden');
            statistiquesInterface.classList.add('hidden');
        });

        // Afficher l'interface √âtudiants
        etudiantsBtn.addEventListener('click', () => {
            etudiantsInterface.classList.remove('hidden');
            dashboardInterface.classList.add('hidden');
            coursInterface.classList.add('hidden');
            chapitresInterface.classList.add('hidden');
            statistiquesInterface.classList.add('hidden');
        });

        // Afficher l'interface Statistiques
        statistiquesBtn.addEventListener('click', () => {
            statistiquesInterface.classList.remove('hidden');
            dashboardInterface.classList.add('hidden');
            coursInterface.classList.add('hidden');
            chapitresInterface.classList.add('hidden');
            etudiantsInterface.classList.add('hidden');
        });

        // Afficher l'interface Chapitres
        function afficherChapitres(cours) {
            document.getElementById('chapitresTitre').textContent = `Chapitres pour ${cours}`;
            coursInterface.classList.add('hidden');
            chapitresInterface.classList.remove('hidden');
        }

        // Retour √† l'interface Cours
        function retourCours() {
            chapitresInterface.classList.add('hidden');
            coursInterface.classList.remove('hidden');
        }

        // Gestion des modales
        const addCoursBtn = document.getElementById('addCoursBtn');
        const addCoursModal = document.getElementById('addCoursModal');
        const closeCoursModal = document.getElementById('closeCoursModal');
        const saveCoursBtn = document.getElementById('saveCoursBtn');

        const addEtudiantBtn = document.getElementById('addEtudiantBtn');
        const addEtudiantModal = document.getElementById('addEtudiantModal');
        const closeEtudiantModal = document.getElementById('closeEtudiantModal');
        const saveEtudiantBtn = document.getElementById('saveEtudiantBtn');

        // Ouvrir la modal pour ajouter un cours
        addCoursBtn.addEventListener('click', () => {
            addCoursModal.classList.remove('hidden');
        });

        // Fermer la modal pour ajouter un cours
        closeCoursModal.addEventListener('click', () => {
            addCoursModal.classList.add('hidden');
        });

        // Enregistrer un cours
        saveCoursBtn.addEventListener('click', () => {
            const coursName = document.getElementById('coursName').value;
            alert(`Cours "${coursName}" enregistr√© !`);
            addCoursModal.classList.add('hidden');
        });

        // Ouvrir la modal pour ajouter un √©tudiant
        addEtudiantBtn.addEventListener('click', () => {
            addEtudiantModal.classList.remove('hidden');
        });

        // Fermer la modal pour ajouter un √©tudiant
        closeEtudiantModal.addEventListener('click', () => {
            addEtudiantModal.classList.add('hidden');
        });

        // Enregistrer un √©tudiant
        saveEtudiantBtn.addEventListener('click', () => {
            const etudiantName = document.getElementById('etudiantName').value;
            const etudiantEmail = document.getElementById('etudiantEmail').value;
            alert(`√âtudiant "${etudiantName}" (${etudiantEmail}) enregistr√© !`);
            addEtudiantModal.classList.add('hidden');
        });
    </script>
