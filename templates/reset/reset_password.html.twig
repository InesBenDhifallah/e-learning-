{# templates/reset/reset_password.html.twig #}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Your Password</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url("{{ asset('img/elearning.png') }}");
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: background-color 0.3s ease;
        }

        /* Menu en haut de la page */
        .top-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            position: fixed;
            top: 0;
            left: 0;
            z-index: 2;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .logo img {
            height: 50px;
            width: auto;
        }

        .menu a {
            margin: 0 15px;
            text-decoration: none;
            color: #333;
            font-size: 18px;
        }

        .menu a:hover {
            background-color: #4bc0c0;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        /* Contenu de la page */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .reset-container {
            position: relative;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 400px;
            width: 100%;
            z-index: 2;
            animation: fadeIn 0.5s ease-out;
        }

        .reset-container h1 {
            margin-bottom: 20px;
            color: #333;
            font-size: 26px;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .input-group {
            display: flex;
            align-items: center;
            background: #f1f1f1;
            padding: 12px;
            border-radius: 5px;
            margin-bottom: 15px;
            transition: background-color 0.3s ease;
        }

        .input-group i {
            margin-right: 10px;
            color: #666;
        }

        .input-group input {
            border: none;
            outline: none;
            background: transparent;
            width: 100%;
            font-size: 16px;
        }

        .submit-btn {
            background: #36a2eb;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background: #4bc0c0;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>

    <!-- Menu en haut -->
    <div class="top-nav">
        <div class="logo">
            <img src="{{ asset('img/logo.png') }}" alt="Logo">
        </div>
        <div class="menu">
            <a href="{{ path('app_parentsignup') }}">S'inscrire</a>
            <a href="{{ path('app_register') }}">Rejoindre notre Ã©quipe</a>
            <a href="{{ path('app_register') }}"></a>
        </div>
    </div>

    <div class="overlay"></div>

    <div class="reset-container">
        <h1>Reset Your Password</h1>

        {# Password reset form #}
        <form method="post" action="{{ path('app_update_password') }}">
            {# Hidden input to pass the email #}
            <input type="hidden" name="email" value="{{ email }}">

            {# New Password Field #}
            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required
                    minlength="8" {# Enforce minimum password length #}
                    placeholder="Enter your new password"
                >
            </div>

            {# Confirm New Password Field #}
            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input 
                    type="password" 
                    id="confirm_password" 
                    name="confirm_password" 
                    required
                    minlength="8" {# Enforce minimum password length #}
                    placeholder="Confirm your new password"
                >
            </div>

            {# Submit Button #}
            <button type="submit" class="submit-btn">Reset Password</button>
        </form>
    </div>

</body>
</html>
{% endblock %}