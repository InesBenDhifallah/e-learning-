{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h1 class="text-2xl font-bold mb-6">Modifier l'article</h1>

                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 text-green-700 p-4 rounded-lg mb-6">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-6">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.title, {'attr': {
                            'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-lime-500 focus:border-lime-500'
                        }}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div>
                        {{ form_label(form.category, 'Cat√©gorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.category, {'attr': {
                            'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-lime-500 focus:border-lime-500'
                        }}) }}
                        {{ form_errors(form.category) }}
                    </div>

                    <div>
                        {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="flex justify-between pt-4">
                        <a href="{{ path('articles_index') }}" 
                           class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition">
                            Retour
                        </a>
                        <button type="submit" 
                                class="bg-lime-500 text-white px-6 py-2 rounded-lg hover:bg-lime-600 transition">
                            Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
