{% extends 'base.html.twig' %}

{% block title %}Nouvel Article - Alpha Education{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="w-full max-w-lg p-8 bg-white shadow-xl rounded-2xl">
            <h1 class="text-3xl font-extrabold text-gray-800 mb-8 text-center">
                üìù Cr√©er un nouvel article
            </h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <!-- Champ Titre -->
            <div>
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'block text-lg font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.title, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500 transition duration-300 ease-in-out border-gray-300',
                        'placeholder': 'Entrez le titre de l\'article'
                    }
                }) }}
            </div>

            <!-- Champ Contenu -->
            <div>
                {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'block text-lg font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.content, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500 transition duration-300 ease-in-out border-gray-300',
                        'placeholder': 'R√©digez le contenu de votre article...'
                    }
                }) }}
            </div>

            <!-- Champ Auteur -->
            <div>
                {{ form_label(form.author, 'Author', {'label_attr': {'class': 'block text-lg font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.author, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500 transition duration-300 ease-in-out border-gray-300',
                    }
                }) }}
            </div>

            <!-- Champ Cat√©gorie -->
            <div>
                {{ form_label(form.category, 'Category', {'label_attr': {'class': 'block text-lg font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.category, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500 transition duration-300 ease-in-out border-gray-300',
                    }
                }) }}
            </div>

            <!-- Champ Created At -->
            <div>
                {{ form_label(form.createdAt, 'Created at', {'label_attr': {'class': 'block text-lg font-semibold text-gray-700 mb-2'}}) }}
                {{ form_widget(form.createdAt, {
                    'attr': {
                        'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500 transition duration-300 ease-in-out border-gray-300',
                    }
                }) }}
            </div>

            <!-- Boutons d'action (plac√©s apr√®s Created At) -->
            <div class="flex flex-col sm:flex-row justify-between space-y-4 sm:space-y-0 sm:space-x-4 mt-6">
                <button type="submit" 
                        class="bg-lime-500 text-white px-6 py-3 rounded-full font-bold shadow-lg hover:bg-lime-600 transition duration-300 transform hover:scale-105 w-full sm:w-auto">
                    ‚úÖ Enregistrer
                </button>
                <button type="button" 
                        onclick="history.back()" 
                        class="bg-gray-500 text-white px-6 py-3 rounded-full font-bold shadow-lg hover:bg-gray-600 transition duration-300 transform hover:scale-105 w-full sm:w-auto">
                    ‚¨Ö Retour
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

