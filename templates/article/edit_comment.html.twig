{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h1 class="text-2xl font-bold mb-6">Modifier le commentaire</h1>

            <form method="post" class="space-y-4">
                <div>
                    <label for="content" class="block text-sm font-medium text-gray-700 mb-1">Contenu</label>
                    <textarea 
                        id="content" 
                        name="content" 
                        rows="4" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-lime-500 focus:border-lime-500"
                        required
                    >{{ comment.content }}</textarea>
                </div>

                <div class="flex justify-between">
                    <a href="{{ path('article_show', {'id': comment.article.id}) }}" 
                       class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="bg-lime-500 text-white px-4 py-2 rounded-lg hover:bg-lime-600 transition">
                        Enregistrer les modifications
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %} 