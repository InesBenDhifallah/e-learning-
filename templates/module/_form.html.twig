{% block body %}
<div class="flex justify-center items-center min-h-screen">
    <div class="bg-white w-full max-w-md mx-auto rounded-xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-center mb-6">Ajouter un module</h2>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
            <label for="{{ form.nom.vars.id }}" class="block text-sm font-medium text-gray-600">Nom du module</label>
            {{ form_widget(form.nom, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
        </div>

        <button type="submit" class="w-full py-3 bg-lime-500 text-white font-medium rounded-lg hover:bg-lime-600 transition duration-300">Ajouter le module</button>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
