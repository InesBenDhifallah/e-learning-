<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier le Quiz</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64">
            {% include 'sidebarprof.html.twig' %}
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-8">
            <div class="max-w-4xl mx-auto">
                <h1 class="text-3xl font-bold text-gray-800 mb-6">Modifier le Quiz</h1>

                {{ form_start(form, {'attr': {'class': 'bg-white rounded-lg shadow-sm p-6'}}) }}
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2 md:col-span-1">
                            {{ form_row(form.matiere, {
                                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                                'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500'}
                            }) }}
                        </div>
                        <div class="col-span-2 md:col-span-1">
                            {{ form_row(form.chapitre, {
                                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                                'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500'}
                            }) }}
                        </div>
                        <div class="col-span-2">
                            {{ form_row(form.difficulte, {
                                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                                'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500'}
                            }) }}
                        </div>
                    </div>

                    <div class="mt-6 flex justify-end space-x-4">
                        <a href="{{ path('app_quizz2_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i>Retour
                        </a>
                        <button type="submit" class="bg-[#AFC92C] hover:bg-[#6D9B25] text-white px-6 py-2 rounded-lg transition-colors">
                            <i class="fas fa-save mr-2"></i>Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</body>
</html>
