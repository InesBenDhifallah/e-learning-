{% extends 'base.html.twig' %}

{% block title %}Events!{% endblock %}

{% block body %}

<style>
    .event-card {
        background-color: #f9fafb;
        border: 1px solid #e2e8f0;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }
    .event-card:hover {
        transform: translateY(-5px);
    }
    .event-card h3 {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .event-card p {
        font-size: 1rem;
        color: #555;
    }
    .event-card a {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        color: #007bff;
    }
    .event-card a:hover {
        color: #0056b3;
    }

    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Event List</h1>

<a href="{{ path('event_add') }}" class="btn btn-primary">Add Event</a>
<div>
    {% for event in events %}
    <div class="event-card">
        <h3>{{ event.name }}</h3>
        {% if event.image %}
    <img src="{{ asset('uploads/events/' ~ event.image) }}" alt="{{ event.name }}" class="event-image" />
{% else %}
    <p>No image available</p>
{% endif %}
    
        <p>ğŸ“… {{ event.date|date('Y-m-d') }} | ğŸ•’  {{ event.time }}|| ğŸ“ {{ event.place }}</p>
        <a href="{{ path('event_show', {'id': event.id}) }}">View Details</a>
    </div>
    {% else %}
        <p>No events found.</p>
    {% endfor %}
</div>

{% endblock %}
