<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Événements</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 text-white">
            {% include 'sidebaradmin.html.twig' %}
        </div>

        <!-- Contenu principal -->
        <div class="flex-1 p-8">
            <header class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-800">Gestion des Événements</h1>
                <a href="{{ path('app_event_new') }}" 
                   class="py-2 px-4 bg-orange-600 text-white rounded-lg hover:bg-orange-700">
                    <i class="fas fa-plus mr-2"></i> Ajouter un Événement
                </a>
            </header>

            <!-- Tableau des événements -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <table class="w-full text-left">
                    <thead class="bg-lime-600 text-white">
                        <tr>
                            <th class="py-4 px-6">ID</th>
                            <th class="py-4 px-6">Titre</th>
                            <th class="py-4 px-6">Description</th>
                            <th class="py-4 px-6">Type</th>
                            <th class="py-4 px-6">Localisation</th>
                            <th class="py-4 px-6">Prix</th>
                            <th class="py-4 px-6">Date Début</th>
                            <th class="py-4 px-6">Date Fin</th>
                            <th class="py-4 px-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr class="hover:bg-gray-50">
                                <td class="py-4 px-6">{{ event.id }}</td>
                                <td class="py-4 px-6">{{ event.titre }}</td>
                                <td class="py-4 px-6">{{ event.description }}</td>
                                <td class="py-4 px-6">{{ event.type }}</td>
                                <td class="py-4 px-6">{{ event.localisation ?: 'N/A' }}</td>
                                <td class="py-4 px-6">{{ event.prix }} €</td>
                                <td class="py-4 px-6">{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                                <td class="py-4 px-6">{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                                <td class="py-4 px-6">
                                    <a href="{{ path('app_event_show', {'id': event.id}) }}" 
                                       class="text-blue-500 hover:text-blue-700">
                                        Voir
                                    </a>
                                    |
                                    <a href="{{ path('app_event_edit', {'id': event.id}) }}" 
                                       class="text-green-500 hover:text-green-700">
                                        Modifier
                                    </a>
                                    |
                                    <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                        <button type="submit" class="text-red-500 hover:text-red-700 bg-transparent border-none cursor-pointer">
                                            Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9" class="py-4 px-6 text-center">Aucun événement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
