{% extends 'base.html.twig' %}

{% block title %}{{ editMode is defined and editMode ? 'Edit Event' : 'Add Event' }}{% endblock %}

{% block body %}
 <div class="flex justify-center items-center min-h-screen">
        <div class="bg-white w-full max-w-md mx-auto rounded-xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-center mb-6">{{ editMode is defined and editMode ? 'Edit Event' : 'Create New Event' }}</h2>

            <!-- Use Symfony form helpers -->
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            
            <div>
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <div>
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <div>
                {{ form_label(form.date) }}
                {{ form_widget(form.date, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <div>
                {{ form_label(form.time) }}
                {{ form_widget(form.time, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <div>
                {{ form_label(form.place) }}
                {{ form_widget(form.place, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <div>
                {{ form_label(form.speaker) }}
                {{ form_widget(form.speaker, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <div>
                {{ form_label(form.category) }}
                {{ form_widget(form.category, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <div>
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'mt-2 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-lime-500'}}) }}
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full py-3 bg-lime-500 text-white font-medium rounded-lg hover:bg-lime-600 transition duration-300">
                {{ editMode is defined and editMode ? 'Update Event' : 'Save Event' }}
            </button>

            {{ form_end(form) }}
        </div>
    </div>
    <a href="{{ path('event_index') }}" class="text-lime-500 hover:text-lime-600">Back to the event list</a>
{% endblock %}
