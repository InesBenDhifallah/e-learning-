{% extends 'base.html.twig' %}

{% block title %}Plans d'Abonnement{% endblock %}  

{% block body %}
   <h2 class="text-3xl font-bold text-center text-gray-800 my-8">Choisissez votre abonnement</h2>
        <div class="grid md:grid-cols-3 gap-6 px-6">
            
            <div class="bg-[#FEF9E7] p-6 rounded-2xl shadow-lg border border-gray-200 text-center">
                <h3 class="text-xl font-semibold text-gray-800">Pack d'{{pack1.type}}</h3>
                <p class="text-gray-600 my-2">Paiement par mois</p>
                <p class="text-3xl font-bold text-orange-600 my-4">{{pack1.prix}}D <span class="text-sm font-normal">/ mois</span></p>
                <ul class="text-gray-700 text-sm mb-6 space-y-2">
                    <li>✔ Accès aux cours de base</li>
                    <li>✔ Sessions en ligne</li>
                    <li>✔ Quiz et évaluations</li>
                </ul>
                <button 
                    class="w-full bg-orange-600 text-white py-2 rounded-lg hover:bg-orange-700"
                    onclick="window.location.href='{{ path('pay', { prix: pack1.prix,id:pack1.id }) }}'">
                    Choisir
                </button>


            </div>
            
            <div class="bg-[#FEF9E7] p-6 rounded-2xl shadow-lg border border-orange-600 text-center relative">
                <span class="absolute top-0 right-0 bg-orange-600 text-white text-xs font-bold px-3 py-1 rounded-bl-lg">Populaire</span>
                <h3 class="text-xl font-semibold text-gray-800">Pack {{pack2.type}}</h3>
                <p class="text-gray-600 my-2">Paiement par trimestre</p>
                <p class="text-3xl font-bold text-orange-600 my-4">{{pack2.prix}}D <span class="text-sm font-normal">/ mois</span></p>
                <ul class="text-gray-700 text-sm mb-6 space-y-2">
                    <li>✔ Accès aux cours du trimestre</li>
                    <li>✔ Sessions en ligne</li>
                    <li>✔ Quiz et évaluations</li>
                </ul>
                 <button 
                    class="w-full bg-orange-600 text-white py-2 rounded-lg hover:bg-orange-700"
                    onclick="window.location.href='{{ path('pay', { prix: pack2.prix, id:pack2.id }) }}'">
                    Choisir
                </button>
            </div>
            
            <div class="bg-[#FEF9E7] p-6 rounded-2xl shadow-lg border border-gray-200 text-center">
                <h3 class="text-xl font-semibold text-gray-800">Pack {{pack3.type}}</h3>
                <p class="text-gray-600 my-2">Paiement par année</p>
                <p class="text-3xl font-bold text-orange-600 my-4">{{pack3.prix}}D <span class="text-sm font-normal">/ mois</span></p>
                <ul class="text-gray-700 text-sm mb-6 space-y-2">
                    <li>✔ Accès aux cours de l'année</li>
                    <li>✔ Sessions en ligne</li>
                    <li>✔ Quiz et évaluations</li>
                </ul>
                 <button 
                    class="w-full bg-orange-600 text-white py-2 rounded-lg hover:bg-orange-700"
                    onclick="window.location.href='{{ path('pay', { prix: pack3.prix ,id:pack3.id}) }}'">
                    Choisir
                </button>
            </div>
        </div>
{% endblock %}

