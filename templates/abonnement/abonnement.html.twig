{% extends 'base.html.twig' %}

{% block title %}Plans d'Abonnement{% endblock %}  

{% block body %}
    <h2 class="text-3xl font-bold text-center text-gray-800 my-8">Choisissez votre abonnement</h2>

    <div class="grid md:grid-cols-3 gap-6 px-6">
        {% for pack in abonnements %}
            <div class="bg-[#FEF9E7] p-6 rounded-2xl shadow-lg border {% if loop.index == 2 %}border-orange-600{% else %}border-gray-200{% endif %} text-center relative">
                
                {% if loop.index == 2 %}
                    <span class="absolute top-0 right-0 bg-orange-600 text-white text-xs font-bold px-3 py-1 rounded-bl-lg">Populaire</span>
                {% endif %}
                
                <h3 class="text-xl font-semibold text-gray-800">Pack {{ pack.type }}</h3>
                <p class="text-gray-600 my-2">
                    {% if loop.index == 1 %}
                        Paiement par mois
                    {% elseif loop.index == 2 %}
                        Paiement par trimestre
                    {% else %}
                        Paiement par année
                    {% endif %}
                </p>
                
                <p class="text-3xl font-bold text-orange-600 my-4">{{ pack.prix }}D <span class="text-sm font-normal">/ mois</span></p>
                
                <ul class="text-gray-700 text-sm mb-6 space-y-2">
                    <li>✔ Accès aux cours 
                        {% if loop.index == 1 %}de base{% elseif loop.index == 2 %}du trimestre{% else %}de l'année{% endif %}
                    </li>
                    <li>✔ Sessions en ligne</li>
                    <li>✔ Quiz et évaluations</li>
                </ul>

                <a href="{{ path('app_paiement_new', {'abonnementId': pack.id}) }}" 
   class="w-full bg-orange-600 text-white py-2 rounded-lg hover:bg-orange-700 text-center block">
   Choisir
</a>

            </div>
        {% else %}
            <p class="text-center text-gray-500">Aucun abonnement disponible.</p>
        {% endfor %}
    </div>
{% endblock %}
